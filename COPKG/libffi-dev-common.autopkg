@import "version.inc";
@import "common.inc";
@import "outercurve.inc";

package {
    name: "libffi-dev-common";
    version: "${package-version}";
    arch : any;
    
    display-name: "Foreign Function Interface library - common files";
    location: "http://coapp.org/repository/${OutputFilename}";

    feed: "http://coapp.org/repository/packages.atom.xml";
    publisher: "CoApp Project";
}

files[headers] {
    root: @"..";
    include: {
        @"COPKG\libffi\libffi\ffi.h",
        @"src\x86\ffitarget.h",
    };
    
    trim-path:all;
    
    destination-path:"include";
}

developer-library[libffi] {
    headers: { 
        headers
    };
}

license[expat] {
    license: "..\LICENSE";
    license-type: "Expat License";
}

metadata {
    author-version : "${author-version}";
    bug-tracker: "https://github.com/coapp-packages/libffi/issues";
    stability : "0";

    summary: "Foreign Function Interface library - common files";
    description: @"libffi is a library that allows software to call any function whose interface is known at runtime.";
    
    licenses : {
        expat
    };
}
